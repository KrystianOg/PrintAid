# Production Environment Overrides
NODE_ENV=production
LOG_LEVEL=warn

# Production Database
POSTGRES_DB=medusa_prod

# Production Redis - higher memory limit
REDIS_MAX_MEMORY=512mb

# Production CORS - restrictive
STORE_CORS=https://yourdomain.com,https://www.yourdomain.com
ADMIN_CORS=https://admin.yourdomain.com

# Production Security
# JWT_SECRET=production_jwt_secret_from_secrets_manager
# COOKIE_SECRET=production_cookie_secret_from_secrets_manager

# Disable development features
MEDUSA_ADMIN_ONBOARDING_TYPE=production
MEDUSA_DISABLE_TELEMETRY=false

# Production performance settings
NODE_OPTIONS=--max-old-space-size=2048
